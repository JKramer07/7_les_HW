<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/item_title_txt"
        android:fontFamily="sans-serif-condensed"
        android:text="Title"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_description_txt"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@id/item_title_txt"
        android:textSize="16sp"
        android:textColor="#000"
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_date_txt"
        android:textSize="16sp"
        android:textColor="#222"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/item_title_txt"
        android:layout_alignBottom="@id/item_description_txt"
        android:gravity="center"
        android:text="28.04.2021 19:20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/item_delete_btn"
        android:layout_marginTop="8dp"
        android:layout_below="@id/item_description_txt"
        android:text="Удалить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/item_about_btn"
        android:layout_marginTop="8dp"
        android:layout_below="@id/item_description_txt"
        android:layout_alignParentEnd="true"
        android:text="Подробнее"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>